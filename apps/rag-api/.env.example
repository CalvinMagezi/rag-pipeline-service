# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Vector Store Configuration
# Options: in-memory, filesystem, pinecone, weaviate, qdrant
VECTOR_STORE_PROVIDER=filesystem
VECTOR_STORE_PATH=./data/vectors

# Embedding Provider Configuration
# Options: mock, openai, cohere, huggingface
EMBEDDING_PROVIDER=mock
EMBEDDING_DIMENSION=384

# OpenAI Configuration (if using OpenAI embeddings)
# OPENAI_API_KEY=sk-...
# EMBEDDING_MODEL=text-embedding-3-small

# Chunking Configuration
# Options: character, token, recursive
CHUNKING_STRATEGY=recursive
CHUNK_SIZE=512
CHUNK_OVERLAP=50
# CHUNK_SEPARATORS=\n\n,\n,. , ,

# Query Configuration
QUERY_TOP_K=5
